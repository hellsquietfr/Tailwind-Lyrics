{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./dist/js",
        "rootDir": "./src/js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/js/**/*"],
    "exclude": ["node_modules"]
}